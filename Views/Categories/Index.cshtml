@model IEnumerable<stajprojem.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>category_name</th>
            <th>description</th>
            <th>created_date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.category_name</td>
                <td>@item.description</td>
                <td>@item.created_date?.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
