@model IEnumerable<stajprojem.Models.Supplier>

@{
    ViewData["Title"] = "Tedarikçiler";
}

<h2>Tedarikçiler</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>company_name</th>
            <th>contact_person</th>
            <th>email</th>
            <th>phone</th>
            <th>address</th>
            <th>city</th>
            <th>created_date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.company_name</td>
                <td>@item.contact_person</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.city</td>
                <td>@item.created_date?.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
