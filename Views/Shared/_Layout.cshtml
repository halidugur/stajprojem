<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StajProjem</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar Menü Başlangıç -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">StajProjem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">ANASAYFA</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Customers")">MÜŞTERİLER</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Products")">ÜRÜNLER</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Orders")">SİPARİŞLER</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Employees")">ÇALIŞANLAR</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Suppliers")">TEDARİKÇİLER</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Categories")">KATEGORİLER</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "PurchaseOrders")">SATIN ALMA</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "FilteredProducts")">Ürün Filtrele</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar Menü Bitiş -->

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-5">
        <span class="text-secondary">YazStajı &copy; @DateTime.Now.Year | Veri Bilişim Hiz. San. Tic. Ltd. Şti. için geliştirildi </span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
